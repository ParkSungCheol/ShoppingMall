<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shoppingmall.Mapper.UserMapper">

    <select id="getUserList" resultType="com.example.shoppingmall.Domain.User">
        SELECT
            id
             ,	pwd
             ,  name
             ,  address
             ,  phone
             ,  grade
             ,  category
             ,  birth
             ,  email
             ,  date
        FROM
            user
        ORDER by
            id ASC
    </select>
    
    <select id="existCheck"  resultType="com.example.shoppingmall.Domain.User">
        SELECT
            id
             ,	pwd
             ,  name
             ,  address
             ,  phone
             ,  grade
             ,  category
             ,  birth
             ,  email
             ,  date
             ,  salt
        FROM
            user
        WHERE 1=1
        <if test='user.id != null'>
        AND id = #{user.id}
        </if>
        <if test='user.email != null'>
        AND email = #{user.email}
        </if>
        <if test='user.phone != null'>
        AND phone = #{user.phone}
        </if>
    </select>
    
    <insert id="insertUser">
		INSERT INTO user
		VALUES (
			#{user.id}
			, #{user.pwd}
			, #{user.name}
			, #{user.address}
			, #{user.phone}
			, #{user.grade}
			, #{user.category}
			, #{user.birth}
			, #{user.email}
			, SYSDATE()
			, #{user.salt}
		)
	</insert>
	
	<update id="updateUser">
		UPDATE user
		SET salt = salt
		<if test='user.pwd != null'>
		, pwd = #{user.pwd}
		</if>
		<if test='user.name != null'>
		, name = #{user.name}
		</if>
		<if test='user.address != null'>
		, address = #{user.address}
		</if>
		<if test='user.phone != null'>
		, phone = #{user.phone}
		</if>
		<if test='user.grade != null'>
		, grade = #{user.grade}
		</if>
		<if test='user.category != null'>
		, category = #{user.category}
		</if>
		<if test='user.birth != null'>
		, birth = #{user.birth}
		</if>
		<if test='user.email != null'>
		, email = #{user.email}
		</if>
		WHERE id = #{user.id}
	</update>
</mapper>